/* pages/order3.wxss */
/* 取餐号 */
.top {
  height: 220rpx;
  display: flex;
  padding: 30rpx;
}
/* 取餐号左侧部分 */
.top1 {
  width: 15%;
  height: 100%;
  background-color: #E56443;
  color: #fff;
  font-size: 35rpx;
  writing-mode: vertical-lr;
  text-align: center;
  line-height: 100rpx;
  letter-spacing: 8rpx;
}
/* 取餐号右侧部分 */
.top2 {
  width: 85%;
  height: 100%;
  background-color: #FEF9F3;
  position: relative;
}
.top2Text1 {
  font-size: 50rpx;
  position: absolute;
  left: 50rpx;
  top: 20rpx;
}
.top2Text2 {
  font-size: 25rpx;
  color: #F39B3A;
  position: absolute;
  left: 180rpx;
  top: 45rpx;
}
.top2Text3 {
  width: 80%;
  font-size: 30rpx;
  font-weight: bold;
  color: #A56950;
  position: absolute;
  left: 50rpx;
  top: 90rpx;
  /* 不换行 */
  white-space: nowrap; 
  /* 超出内容隐藏 */
  overflow: hidden;
  /* 超出部分显示省略号 */
  text-overflow: ellipsis;
}
.top2Text4 {
  font-size: 24rpx;
  color: #A9A9A9;
  position: absolute;
  left: 50rpx;
  top: 150rpx;
}

/* 底部订单号 */
.orderNumberBox {
  height: 210rpx;
  border-top: 2rpx solid #E9E9E9;
}
.orderNumber, .orderTime, .payTime {
  height: 70rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #E9E9E9;
  color: #CACACA;
}
.voucher {
  width: 80%;
  height: 80rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #FD9C2B;
  text-align: center;
  margin: auto;
  margin-top: 20rpx;
  line-height: 80rpx;
}